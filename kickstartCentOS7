echo "BONDING_OPTS=\"miimon=100 mode=active-backup\"
TYPE=Bond
BONDING_MASTER=yes
PROXY_METHOD=none
BROWSER_ONLY=no
BOOTPROTO=none
IPADDR=192.168.142.101
DNS=192.168.142.1
GATEWAY=192.168.142.1
IPV4_FAILURE_FATAL=no
IPV6INIT=yes
IPV6_AUTOCONF=yes
IPV6_DEFROUTE=yes
IPV6_FAILURE_FATAL=no
NM_CONTROLLED=no
IPV6_ADDR_GEN_MODE=stable-privacy
NAME=\"Bond connection 1\"
DEVICE=nm-bond
ONBOOT=yes
" > /etc/sysconfig/network-scripts/ifcfg-Bond_connection_1

echo "TYPE=Ethernet
NAME=ens9
DEVICE=ens9
ONBOOT=yes
MASTER=nm-bond
NM_CONTROLLED=no
SLAVE=yes" > /etc/sysconfig/network-scripts/ifcfg-ens9

echo "TYPE=Ethernet
NAME=ens10
DEVICE=ens10
ONBOOT=yes
MASTER=nm-bond
NM_CONTROLLED=no
